<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_actor_roundedimv_width"
    android:orientation="horizontal">

    <com.benavides.ramon.popularmovies.cviews.RoundedImageView
        android:id="@+id/item_actor_thumb"
        android:layout_width="@dimen/item_actor_roundedimv_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/item_actor_roundedimageview_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/AppTheme.DetailSectionTitle"
            android:id="@+id/item_actor_name_tev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/item_actor_character_tev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>